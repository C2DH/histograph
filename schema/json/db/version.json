{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://c2dh.uni.lu/histograph/db/version.json",
  "title": "Version",
  "description": "Version (also known as Annotation) of a resource",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "service": {
      "description": "Service that was used to do NER for the annotation",
      "type": "string",
      "examples": [
        "stanford-ner"
      ]
    },
    "language": {
      "description": "ISO 639-1 codes of the language this annotation is for",
      "type": "string",
      "pattern": "^[a-z]{2}$"
    },
    "yaml": {
      "description": "Annotations as YAML",
      "type": "string",
      "examples": [
        "- id: asdf\n  context: [2, 17]"
      ]
    },
    "creation_date": {
      "description": "Resource creation ISO timestamp",
      "type": "string",
      "format": "date-time"
    },
    "creation_time": {
      "description": "Resource creation UNIX time in milliseconds",
      "type": "integer"
    },
    "last_modification_date": {
      "description": "Resource modification ISO timestamp",
      "type": "string",
      "format": "date-time"
    },
    "last_modification_time": {
      "description": "Resource modification UNIX time in milliseconds",
      "type": "integer"
    }
  },
  "required": [
    "service",
    "language",
    "yaml"
  ]
}